<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.blueiobase.api.android.bannerx.sample.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BannerX"
        tools:targetApi="33"
        >
        <activity
            android:name=".ui.activity.FullscreenActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/Theme.BannerX.NoActionBar"
            />
        <activity
            android:name=".ui.activity.PlaygroundActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/Theme.BannerX.NoActionBar"
            android:screenOrientation="userPortrait"
            tools:ignore="LockedOrientationActivity"
            />
        <activity
            android:name=".ui.activity.IndicatorsActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/Theme.BannerX.NoActionBar"
            android:screenOrientation="userPortrait"
            tools:ignore="LockedOrientationActivity"
            />
        <activity
            android:name=".ui.activity.TransformersActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/Theme.BannerX.NoActionBar"
            android:screenOrientation="userPortrait"
            tools:ignore="LockedOrientationActivity"
            />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BannerX.NoActionBar"
            android:screenOrientation="userPortrait"
            tools:ignore="LockedOrientationActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>