<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FullscreenActivity"
    >

    <com.blueiobase.api.android.bannerx.BannerX
        android:id="@+id/fullscreen_bannerx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicatorBackground="@android:color/transparent"
        app:autoLoopDelay="2500"
        app:bannerImageCornerRadius="0dp"
        app:indicatorFadeOnIdle="false"
        app:showIndicatorText="false"
        app:applyBannerOnClickScale="false"
        app:autoLoopSpeed="800"
        app:isManualLoopable="true"
        />
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image_button"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/current_transformer"
        android:layout_width="300dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/image_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:rotation="180"
        android:layout_marginBottom="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:background="@android:color/transparent"
        app:tint="@color/white"
        />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/image_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:background="@android:color/transparent"
        app:tint="@color/white"
        />

</RelativeLayout>